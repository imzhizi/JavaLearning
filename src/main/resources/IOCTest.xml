<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="teacher" class="com.imzhizi.javalearning.Spring.IOCTest.Teacher">
        <constructor-arg ref="location"/>
        <constructor-arg name="course">
            <bean class="com.imzhizi.javalearning.Spring.IOCTest.Course" p:name="数学"/>
        </constructor-arg>
        <property name="code" value="10021"/>
        <property name="school" ref="school"/>
        <property name="clazz">
            <set>
                <bean class="com.imzhizi.javalearning.Spring.IOCTest.Clazz" p:code="11" p:count="55"/>
                <bean class="com.imzhizi.javalearning.Spring.IOCTest.Clazz" p:code="13" p:count="57"/>
                <bean class="com.imzhizi.javalearning.Spring.IOCTest.Clazz" p:code="15" p:count="54"/>
            </set>
        </property>
    </bean>

    <bean id="location" class="com.imzhizi.javalearning.Spring.IOCTest.Location">
        <property name="city" value="河南省"/>
        <property name="zipCode" value="450000"/>
    </bean>

    <bean id="school" class="com.imzhizi.javalearning.Spring.IOCTest.School">
        <property name="name" value="一中"/>
        <property name="principal" value="张校长"/>
    </bean>

</beans>